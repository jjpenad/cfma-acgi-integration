# ACGI to HubSpot Integration Environment Variables

# Flask Configuration
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=false
HOST=0.0.0.0
PORT=5000

# Authentication Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
SESSION_COOKIE_SECURE=false

# Database Configuration
# Options: in_memory, local, postgres
DATABASE_TYPE=in_memory

# Heroku PostgreSQL (set automatically by Heroku)
DATABASE_URL=postgresql://username:password@host:port/database

# Local SQLite (optional)
LOCAL_DATABASE_URL=sqlite:///local_app.db

# Logging Configuration
LOG_LEVEL=INFO

# HubSpot Configuration
HUBSPOT_API_KEY=your-hubspot-api-key

# ACGI Configuration
ACGI_API_URL=your-acgi-api-url
ACGI_USERNAME=your-acgi-username
ACGI_PASSWORD=your-acgi-password

# ACGI Default Credentials (optional - can be set via web interface)
# ACGI_USERID=your_acgi_userid
# ACGI_ENVIRONMENT=test

# Integration Settings
INTEGRATION_INTERVAL_MINUTES=10
MAX_RETRIES=3
REQUEST_TIMEOUT=30 